{
  "version": 2,
  "installCommand": "pnpm -C frontend install",
  "buildCommand": "pnpm -C frontend build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "git": {
    "deploymentEnabled": false
  }
}